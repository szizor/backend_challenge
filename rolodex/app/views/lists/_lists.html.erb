<h1>Lists</h1>
<table class="pretty">
  <tr>
    <th>&radic;</th>
    <th>Name</th>
    <th>Number of contacts</th>
    <th colspan="2">Options</th>
  </tr>

  <% for list in @lists %>
    <tr bgcolor="<%=cycle('#F0F0F0', '#ffffff')%>">
      <td><%= check_box_tag "lists_ids[]", list.id %></td>
      <td><%= list.name %></td>
      <td><%= list.contacts.length%></td>
      <td><%= link_to "Show", list %></td>
      <td><%= link_to "Edit", edit_list_path(list) %></td>
    </tr>
  <% end %>
</table>
<a onclick="validachecks('l')" style="cursor: pointer;">Delete all checks</a>
<p><%= link_to "New List", new_list_path,:id=>"new_l" %></p>