<!DOCTYPE html>
<html>
  <head>
    <title>Rolodex</title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <table width="100%">
        <tr>
          <td width="25%">
            &nbsp;
          </td>
          <td width="25%">
            &nbsp;
          </td>
          <td width="35%">
            Logged in as <%= current_user.email %>
          </td>
          <td width="15%">
            <%= link_to "Logout", logout_path %>
          </td>
        </tr>
      </table>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
