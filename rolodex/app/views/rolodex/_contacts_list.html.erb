<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="pretty">
  <tr>
    <th>&radic;</th>
    <th><%= sortable "first_name" %></th>
    <th><%= sortable "middle_name" %></th>
    <th><%= sortable "last_name" %></th>
    <th colspan="2">Options</th>
  </tr>

  <% for contact in @contacts %>
    <tr bgcolor="<%=cycle('#F0F0F0', '#ffffff')%>">
      <td><%= check_box_tag "contacts_ids[]", contact.id %></td>
      <td id="<%=contact.id%>"><%= contact.first_name %></td>
      <td id="<%=contact.id%>"><%= contact.middle_name%></td>
      <td id="<%=contact.id%>"><%= contact.last_name %></td>
      <td><%= link_to "Show", contact %></td>
      <td><%= link_to "Edit", edit_contact_path(contact) %></td>
    </tr>
  <% end %>
</table>
<a onclick="validachecks('i')" style="cursor: pointer;">Delete all checks</a>
<%= will_paginate @contacts %>