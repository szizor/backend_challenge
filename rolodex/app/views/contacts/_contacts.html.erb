<h1>Contacts</h1>
<%= form_tag contacts_path, :method => 'get', :id => "contacts_search" do %>
  <%= hidden_field_tag :destroy %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <input type="button" value="Clear" id="clear">
    <a onclick="selectAll()" style="color:#3D5587;cursor:pointer;">Check All </a><a onclick="uncheckAll()" style="color:#3D5587;cursor:pointer;margin-left: 15px;">Uncheck All </a>
  </p>
  <div ><%= render 'contacts_list' %></div>
<% end %>

<p><%= link_to "New Contact", new_contact_path,:id=>"new_c" %></p>