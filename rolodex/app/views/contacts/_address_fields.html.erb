<fieldset class="fields">
  <legend>Addresses</legend>
  <%= link_to_remove_fields "remove", f %><br />
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :zip %><br />
    <%= f.text_field :zip %>
  </p>
  <p>
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :state %><br />
    <%= f.text_field :state%>
  </p>
  <p>
    <%= f.label :country %><br />
    <%= f.text_field :country %>
  </p>
  <p>
    <%= f.label :address_type_id %><br />
    <%= f.select( :address_type_id, AddressType.all.collect {|r| [r.name, r.id]}, {:include_blank => :true})%>
  </p>
</fieldset>